<!-- pages/myTeam/myTeam.wxml -->
<view class="container">
  <base-header title="我的团队" navOpacity="{{0}}" titleColor="#fff" iconColor="#fff"></base-header>
  <view class="top">
    <image src="/static/img/personal/bg2.png" class="bg" style="height:{{195+capsuleToTop}}px;" />
    <view class="flex">
      <view>
        <view class="num">{{account.totalRebate}}</view>
        <view class="text">总收益</view>
      </view>
      <view>
        <view class="num">{{account.leaderAccount}}</view>
        <view class="text">余额</view>
      </view>
    </view>
  </view>
  <view class="team-wrap frame">
    <view class="team-list" wx:if="{{list.length}}">
      <view class="team-item" wx:for="{{list}}" wx:key="memberId">
        <view class="top flex">
          <image src="{{item.wxHeaderHost}}"></image>
          <view class="info">
            <view class="name">{{item.memberName}}</view>
            <view class="flex">
              <view>消费金额：{{item.spendMoney}}</view>
              <view>消费次数：{{item.orderCount}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <base-no-list wx:else title="暂无推荐"></base-no-list>
  </view>
</view>