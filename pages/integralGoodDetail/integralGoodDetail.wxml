  <view class="sale-wrap">
    <view class="slogan">
      <view class="name">{{goodInfo.name}}</view>
      <!-- <view class="tag">{{goodInfo.tags}}</view> -->
    </view>
    <view class="price-wrap flex">
      <view class="price flex">
        <view class="red">所需积分：{{goodInfo.integral}}</view>
        <view class="grey">￥{{goodInfo.price}}</view>
      </view>
      <view class="sale-num">剩余{{goodInfo.lastCount}}份</view>
    </view>
    <view class="promise flex">
      <view class="left">
        <text class="fold">服务</text>
        <text>品质承诺，极速物流</text>
      </view>
      <!-- <van-icon name="arrow" /> -->
    </view>
  </view>
  <view class="buy-num flex">
    <text>兑换数量：</text>
    <van-stepper wx:if="{{goodInfo.exchangeLimit}}" bind:change="handleBuyNum" value="{{ selectedNumber }}" max="{{goodInfo.exchangeLimit}}" input-width="40px" button-size="32px" />
    <van-stepper wx:else bind:change="handleBuyNum" value="{{ selectedNumber }}" input-width="40px" button-size="32px" />
  </view>
  <view class="tab-wrap">
    <view class="good-detail">
      <rich-text nodes="{{goodContent}}"></rich-text>
