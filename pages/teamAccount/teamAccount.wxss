/* pages/teamAccount/teamAccount.wxss */
.container {
  position: relative;
}

.container .top {
  position: absolute;
  top: 0;
  width: 100%;
}

.container .top .bg {
  position: absolute;
  width: 100%;
}

.container .top .info {
  position: relative;
  padding: 0 40rpx;
}

.container .top .info .all .num {
  font-size: 56rpx;
}

.container .top .info .text {
  font-size: 30rpx;
  color: #1d6d3b;
}

.container .top .info .num {
  color: #ffffff;
  font-size: 40rpx;
}

.container .top .info > .flex {
  margin-top: 45rpx;
}

.container .top .info > .flex > view {
  flex: 1;
}

.container .top .with {
  position: relative;
  top: -160rpx;
  right: 0;
}

.container .top .with .icon {
  position: absolute;
  width: 176rpx;
  right: 0;
}

.container .top .with .text {
  position: absolute;
  right: 33rpx;
  margin-top: 11rpx;
  color: #fff;
  font-size: 30rpx;
  z-index: 9;
}

.container > .content {
  position: relative;
  top: 360rpx;
  padding: 0 40rpx;
  padding-top: 35rpx;
}

.container > .content .tab {
  font-size: 30rpx;
  color: #999;
  left: -30rpx;
}

.container > .content .tab-item {
  padding-bottom: 3rpx;
  margin-right: 30rpx;
}

.container > .content .active {
  border-bottom: 3rpx solid #07c160;
  color: #000104;
}

.container > .content .scroll {
  margin-top: 65rpx;
  height: 720rpx;
}

.container > .content .scroll .list-item {
  justify-content: space-between;
}

.container > .content .scroll .list-item:nth-child(n+2) {
  margin-top: 60rpx;
}

.container > .content .scroll .list-item .label {
  font-size: 24rpx;
  color: #333333;
}

.container > .content .scroll .list-item .time {
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
}

.container > .content .scroll .list-item .price {
  font-size: 24rpx;
  color: #ff4b4b;
}

.container > .content .scroll .list-item .success {
  color: #67C23A;
}

.container > .content .scroll .list-item .danger {
  color: #ff4b4b;
}

.container > .content .scroll .list .block {
  font-size: 30rpx;
  box-shadow: 0px 2px 16px 0px rgba(8, 1, 3, 0.07);
  border-radius: 10rpx;
}

.container > .content .scroll .list .block:nth-child(n+2) {
  border-top: 1rpx solid #f4f4f4;
}

.container > .content .scroll .list .block .flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.container > .content .scroll .list .block .flex .right {
  text-align: right;
  color: #999;
}

.container > .content .scroll .list .block .flex .right .time {
  font-size: 24rpx;
}

.container > .content .scroll .list .block .flex .money {
  color: #ff4b4b;
}

.container > .content .scroll .list .block .content view {
  margin: 15rpx 0;
}

.container > .content .scroll .list .bank {
  width: 100%;
}
