/**index.wxss**/
.container {
  position: relative;
}

.container .timer {
  margin-top: 15rpx;
}

.container .timer .end-text {
  margin-right: 10rpx;
}

.container .timer .item-wrap {
  color: #07c160;
}

.container .timer .item-wrap .item {
  display: inline-block;
  width: 30rpx;
  margin: 0rpx 5rpx;
  color: #07c160;
  font-size: 20rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 4rpx;
}

.container .search-wrap {
  position: relative;
  z-index: 2;
  margin-bottom: 5px;
}

.container .bg-img {
  top: 0;
  position: absolute;
}

.container .bg-img image {
  width: 750rpx;
}

.container .swiper-wrap {
  margin-bottom: 15px;
}

.container .swiper-wrap swiper {
  height: 240rpx;
}

.container .swiper-wrap .swiper-item image {
  border-radius: 18.12rpx;
  overflow: hidden;
  width: 690rpx;
  height: 240rpx;
}

.container .class-wrap .class-list {
  display: flex;
  flex-wrap: wrap;
}

.container .class-wrap .class-list .class-item {
  width: 20%;
  font-size: 24rpx;
  margin-bottom: 15rpx;
}

.container .class-wrap .class-list .class-item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 18.12rpx;
}

.container .seckill-wrap {
  margin-bottom: 10px;
}

.container .seckill-wrap .seckill {
  justify-content: space-between;
  padding: 16rpx 30rpx;
  background-color: #07c160;
  color: #fff;
}

.container .seckill-wrap .seckill .left-icon {
  margin-right: 20rpx;
}

.container .seckill-wrap .seckill .left-icon image {
  width: 47rpx;
  height: 44rpx;
  margin-right: 10rpx;
}

.container .seckill-wrap .seckill .left-icon view {
  width: 60rpx;
  font-size: 30rpx;
  line-height: 36rpx;
}

.container .seckill-wrap .seckill .time-wrap .time-item {
  margin: 0 10rpx;
}

.container .seckill-wrap .seckill .time-wrap .time-item .time-text {
  font-size: 30rpx;
}

.container .seckill-wrap .seckill .active-btn {
  font-size: 30rpx;
  color: #fff;
  padding: 6rpx 15rpx;
  border-radius: 25.5rpx;
  background-color: #fff;
  color: #07c160;
}

.container .goods-wrap .goods-list .goods-item {
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 15rpx;
  margin-bottom: 20rpx;
}

.container .goods-wrap .goods-list .goods-item .item-content {
  align-items: stretch;
  margin-bottom: 20rpx;
}

.container .goods-wrap .goods-list .goods-item .item-content .good-img {
  margin-right: 15rpx;
  width: 281rpx;
  height: 231rpx;
  background-color: #ff5100;
  border-radius: 18.12rpx;
}

.container .goods-wrap .goods-list .goods-item .item-content .right-info {
  justify-content: space-between;
}

.container .goods-wrap .goods-list .goods-item .item-content .right-info .title {
  font-size: 28rpx;
}

.container .goods-wrap .goods-list .goods-item .item-content .right-info .tag {
  font-size: 24rpx;
  margin-bottom: 25rpx;
}

.container .goods-wrap .goods-list .goods-item .item-content .right-info .tag text {
  margin-right: 5rpx;
  color: #666666;
}

.container .goods-wrap .goods-list .goods-item .item-content .right-info .sale-info {
  margin-bottom: 15rpx;
  background-color: #fee7e8;
  border-radius: 15.5rpx;
  padding: 5rpx 10rpx;
  font-size: 20rpx;
  color: #603b41;
}

.container .goods-wrap .goods-list .goods-item .item-content .right-info .sale-info image {
  width: 17rpx;
  height: 21rpx;
  margin-right: 10rpx;
}

.container .goods-wrap .goods-list .goods-item .item-content .right-info .price-wrap {
  margin-bottom: 15rpx;
  width: 400rpx;
  justify-content: space-between;
}

.container .goods-wrap .goods-list .goods-item .item-content .right-info .price-wrap .price {
  font-size: 28rpx;
  color: #fb1438;
}

.container .goods-wrap .goods-list .goods-item .item-content .right-info .price-wrap .price .right {
  margin-left: 20rpx;
  text-decoration: line-through;
  color: #666666;
}

.container .goods-wrap .goods-list .goods-item .item-content .right-info .price-wrap .price .symbol {
  font-size: 24rpx;
}

.container .goods-wrap .goods-list .goods-item .other-user {
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

.container .goods-wrap .goods-list .goods-item .other-user .img-list {
  margin-right: 15rpx;
}

.container .goods-wrap .goods-list .goods-item .other-user .img-list .img-item image {
  display: block;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin: 0 8rpx;
}

.container .goods-wrap .goods-list .goods-item .other-user .right-text {
  border-left: 1px solid #999999;
  padding-left: 15rpx;
}

.container .rush-wrap {
  background-color: #07c160;
  margin-bottom: 15rpx;
}

.container .rush-wrap .rush .nav-style {
  background-color: #07c160;
}

.container .rush-wrap .goods-wrap {
  padding: 30rpx;
}

.container .rush-wrap .goods-wrap .goods-list .goods-item {
  border-radius: 18.12rpx;
  overflow: hidden;
  background-color: #fff;
}

.container .rush-wrap .goods-wrap .goods-list .goods-item .item-content .right-info {
  padding: 0rpx 20rpx 0 0;
}

.container .rush-wrap .goods-wrap .goods-list .goods-item:last-child {
  margin-bottom: 0;
}

.container .rush-wrap .goods-wrap .goods-list .goods-item .other-user {
  padding: 0 10rpx 10px;
}

.container .rush-wrap .goods-wrap .goods-list .goods-item .other-user .img-list {
  margin-right: 8rpx;
}
