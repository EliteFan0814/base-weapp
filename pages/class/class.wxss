.container .content-wrap .active-class {
  border-left-color: transparent;
}

.container .content-wrap .goods-list .goods-item {
  align-items: stretch;
  margin-bottom: 30rpx;
}

.container .content-wrap .goods-list .goods-item .good-img {
  width: 223rpx;
  height: 183rpx;
  border-radius: 18.12rpx;
}

.container .content-wrap .goods-list .goods-item .goods-info {
  justify-content: space-between;
  align-items: stretch;
  width: 290rpx;
  padding: 0 15rpx;
}

.container .content-wrap .goods-list .goods-item .goods-info .top-wrap .title {
  font-size: 24rpx;
  width: 300rpx;
  margin-bottom: 20rpx;
}

.container .content-wrap .goods-list .goods-item .goods-info .top-wrap .sale {
  font-size: 20rpx;
  color: #603b41;
}

.container .content-wrap .goods-list .goods-item .goods-info .price {
  justify-content: space-between;
}

.container .content-wrap .goods-list .goods-item .goods-info .price .left-price {
  color: #fb1438;
  font-size: 26.17rpx;
}

.container .content-wrap .goods-list .goods-item .goods-info .price .left-price .symbol {
  font-size: 23.17rpx;
}

.container .content-wrap .goods-list .goods-item .goods-info .price .btn {
  padding: 3rpx 40rpx;
  background-color: #07c160;
  border-radius: 20.42rpx;
}

.container .content-wrap .goods-list .goods-item .goods-info .price .btn image {
  width: 28rpx;
  height: 28rpx;
}
