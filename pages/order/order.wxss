/* pages/order/order.wxss */
.container {
  background-color: #f5f5f5;
}

.container .order-list .order-item {
  background-color: #fff;
  padding: 30rpx;
}

.container .order-list .order-item .title {
  margin-bottom: 20rpx;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999999;
}

.container .order-list .order-item .title .red {
  font-size: 28rpx;
  color: #fe2448;
  opacity: 0.97;
}

.container .order-list .order-item .info {
  padding-bottom: 20rpx;
}

.container .order-list .order-item .info .goods-list .goods-item {
  align-items: stretch;
  margin-bottom: 20rpx;
}

.container .order-list .order-item .info .goods-list .goods-item .good-img {
  width: 150rpx;
  height: 150rpx;
  background-color: #ffffff;
  margin-right: 10rpx;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info {
  flex-grow: 1;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 26rpx;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info .name {
  width: 500rpx;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info .spec {
  color: #888888;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info .price {
  width: 100%;
  justify-content: space-between;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info .price .number {
  color: #999999;
}

.container .order-list .order-item .info .more-btn {
  justify-content: center;
  border-top: 1px solid #eeeeee;
}

.container .order-list .order-item .info .more-btn image {
  width: 14rpx;
  height: 14rpx;
  padding: 0 10rpx;
}

.container .order-list .order-item .info .total {
  justify-content: space-between;
}

.container .order-list .order-item .info .total .left {
  font-size: 24rpx;
  color: #999999;
}

.container .order-list .order-item .info .total .right {
  font-size: 28rpx;
  color: #333;
  font-weight: bolder;
}

.container .order-list .order-item .info .total .right .word {
  font-weight: normal;
  color: #666;
}

.container .order-list .order-item .operation {
  justify-content: space-between;
}

.container .order-list .order-item .operation .left-info {
  color: #999999;
}

.container .order-list .order-item .operation .btn-wrap .base-style {
  margin-left: 10rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  border: solid 1rpx #999999;
  background-color: #fff;
  color: #999999;
  padding: 10rpx 20rpx;
  border-radius: 26.99rpx;
}

.container .order-list .order-item .operation .btn-wrap .red {
  border: solid 1rpx #fe2448;
  color: #fe2448;
}
