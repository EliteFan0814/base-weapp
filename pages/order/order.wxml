      <view class="title flex">
        <text>订单号：k4234</text>
        <text class="red">待付款</text>
      </view>
      <view class="info">
        <view class="goods-list">
          <view class="goods-item flex">
            <image src="https://dummyimage.com/150x150/000/fff" class="good-img"></image>
            <view class="right-info flex-dc">
