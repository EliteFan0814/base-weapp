      </view>
      <view class="operation">
        <text>查看配送信息</text>
        <base-btn btn-name="申请退款" btn-style="refund"></base-btn>
        <base-btn btn-name="确认收货" btn-style="confirm"></base-btn>
      </view>
    </view>
  </view>
</view>